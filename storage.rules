rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user has teacher or admin role
    function isTeacherOrAdmin() {
      return request.auth != null &&
             (request.auth.token.role == 'teacher' || request.auth.token.role == 'admin');
    }

    // Allow authenticated users to read and write their course materials
    match /courses/{courseId}/materials/{documentId} {
      // Only teachers and admins can write (upload/update/delete)
      allow write: if isTeacherOrAdmin();
      // All authenticated users can read (e.g. students)
      allow read: if request.auth != null;
    }

    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}