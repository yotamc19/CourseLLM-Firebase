rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write their course materials
    match /courses/{courseId}/materials/{documentId} {
      // Any authenticated user can write (for demo - in production, check custom claims)
      allow write: if request.auth != null;
      // All authenticated users can read (e.g. students)
      allow read: if request.auth != null;
    }

    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}